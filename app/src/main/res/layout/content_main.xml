<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mmart.testapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/textTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp" />

    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintTop_toLTopOf="parent"-->
    <!--app:layout_constraintRight_toLeftOf="@+id/buttonTest"-->

    <Button
        android:id="@+id/buttonTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLICK"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignBottom="@+id/textTest"
        android:layout_toEndOf="@+id/textTest"
        android:layout_marginStart="17dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List View"
        android:id="@+id/buttonListView"
        android:layout_below="@+id/buttonAddMovie"
        android:layout_alignEnd="@+id/buttonAddMovie"
        android:layout_toEndOf="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMovieName"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/buttonTest"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Movie Name"
        android:id="@+id/textView2"
        android:layout_below="@+id/textTest"
        android:layout_alignStart="@+id/textTest"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD MOVIE"
        android:id="@+id/buttonAddMovie"
        android:layout_below="@+id/textRelease"
        android:layout_alignStart="@+id/textRelease" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Runtime"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textRuntime"
        android:layout_toStartOf="@+id/textMovieName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textRuntime"
        android:layout_below="@+id/textMovieName"
        android:layout_alignEnd="@+id/textMovieName"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Director"
        android:id="@+id/textView4"
        android:layout_below="@+id/textRuntime"
        android:layout_toStartOf="@+id/textRuntime" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDirector"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/textRuntime"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Genre"
        android:id="@+id/textView5"
        android:layout_below="@+id/textDirector"
        android:layout_toStartOf="@+id/textDirector" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textGenre"
        android:layout_below="@+id/textDirector"
        android:layout_alignEnd="@+id/textDirector"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textRelease"
        android:layout_below="@+id/textGenre"
        android:layout_alignStart="@+id/textGenre"
        android:layout_alignEnd="@+id/textGenre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Release Date"
        android:id="@+id/textView6"
        android:layout_below="@+id/textGenre"
        android:layout_toStartOf="@+id/textGenre" />

    <!--app:layout_constraintBaseline_toBaselineOf="@id/textTest"-->
    <!--app:layout_constraintLeft_toRightOf="@+id/textTest"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->

</RelativeLayout>
